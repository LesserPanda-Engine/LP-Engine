{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            // "./src/behaviors",
            "./src/engine/"
        ],
        "exclude": [
            "./src/engine/ai/",
            "./src/engine/audio/howler.core.js",
            "./src/engine/device-patch/",
            "./src/engine/polyfill/",
            "./src/engine/pixi/",
            "./src/engine/resource-loader",
            "./src/engine/reactive.js",
            "./src/engine/tilemap/decomp",
            "./src/engine/tilemap/pixi-tilemap.js"
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "applicationName": "Lesser Panda",
        "cleverLinks"   : false,
        "copyright"     : "Lesser Panda Copyright © 2015-2016 The contributors to the Lesser Panda project.",
        "disqus": "",
        "footer"        : "<span class=\"jsdoc-message\">Made with ♥ by Sean Bohan</span>",
        "googleAnalytics": "UA-57114930-3",
        "includeDate"   : false,
        "linenums"      : true,
        "meta": {
            "title": "Lesser Panda",
            "description": "",
            "keyword": ""
        },
        "monospaceLinks": false,
        "navType"       : "inline",
        "openGraph": {
            "title": "Lesser Panda",
            "type": "website",
            "image": "",
            "site_name": "",
            "url": ""
        },
        "outputSourceFiles" : true,
        "theme"         : "flatly",
        "syntaxTheme"   : "default",
        "systemName"    : "Lesser Panda"
    },
    "markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : true
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "private"       : false,
        "lenient"       : true,
        "destination"   : "./docs"
    }
}
